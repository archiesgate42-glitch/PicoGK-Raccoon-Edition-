<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <ProjectReference Include="..\..\PicoGK-Main\PicoGK.csproj" />
  </ItemGroup>

  <!-- Copy Linux native PicoGK runtime to output so the app can load libpicogk.1.7.so -->
  <ItemGroup Condition="Exists('native/linux-x64/libpicogk.1.7.so')">
    <None Include="native/linux-x64/libpicogk.1.7.so" Link="libpicogk.1.7.so" CopyToOutputDirectory="PreserveNewest" Visible="false" />
  </ItemGroup>

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

</Project>
